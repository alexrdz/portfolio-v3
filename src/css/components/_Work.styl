.Work
  &__content
    background-color: $light
  
  &__main
    padding: 8em 0
  
  &__title
    &:after
      background-color: $brown
      border-radius: 5px
      content: ''
      display: block
      height: 5px
      margin: .5em auto
      width: 15%
  
  &__role
    background: url('/img/role-background.svg') center 0 no-repeat
    background-size: cover
    color: $light
    height: 450px
    padding: 3em 0
    position: relative
    z-index: 2
    h2
      &:after
        background-color: $light
        border-radius: 5px
        content: ''
        display: block
        height: 4px
        margin: .5em auto -1em
        width: 30px

    ul
      list-style: none
      margin: 0
      padding: 0

  &__UX
    background-image: url('/img/koala-bg.jpg')
    background-position: center 0
    background-size: cover
    margin-top: -4em
    position: relative
    h2
      &:after
        background-color: $brown
        border-radius: 5px
        content: ''
        display: block
        height: 4px
        margin: 1em auto
        width: 30px

    .Grid
      background-color: rgba($light, 0.7)
      height: 100%
      padding: 15em 0


  &__screens
    background-color: $dark
    background-image: url('/img/work-bg.svg')
    background-position: center center
    background-repeat: no-repeat
    color: $light
    h3
      &:after
        background-color: $green
        border-radius: 5px
        content: ''
        display: block
        height: 4px
        margin: 1em 0 1em
        width: 30px
      &.text-center
        &:after
          margin: 1em auto
    .Grid > .Cell
      padding: 2em
      +above($medium)
        padding: 5em
        &:first-child
          padding-bottom: 0
    a
      color: $orange
      &:hover
        color: darken($orange, 25%)


.Koala-app
  .Work
    &__role
      filter: hue-rotate(350deg) saturate(65%)
    &__UX
      background-image: url('/img/koala-bg.jpg')


.Panda-app
  .Work
    &__role
      filter: hue-rotate(250deg) saturate(65%)
    &__UX
      background-image: url('/img/panda-bg-m.jpg')
      +above($medium)
        background-image: url('/img/panda-bg.jpg')
        .Grid
          background-color: rgba($light, 0.85)

.Mixtagon
  .Work
    &__role
      filter: hue-rotate(35deg) saturate(160%)
    &__UX
      background-image: url('/img/mixtagon-bg.jpg')

.animated-gif
  position: absolute
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
